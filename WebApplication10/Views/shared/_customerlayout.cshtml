<!DOCTYPE html>

<html>
<head>

    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/content/customer.min.css" rel="stylesheet" />

    <style>
        table, th, td {
            border: initial;
            border-collapse: collapse;
            /*// background-color:aliceblue;*/
        }

        th, td {
            padding: 5px;
            text-align: left;
        }

        nav {
            position: center;
            width: 100%;
            height: 100px; /* only for demonstration, should be removed */
            background-color: white;
            padding: 10px;
        }


        article {
            float: right;
            padding: 10px;
            width: 80%;
            background-color: #f1f1f1;
            height: 70px; /* only for demonstration, should be removed */
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>
<body>
    <div>
        <script src="~/scripts/customer_bootstrap.min.js"></script>

        <!-------------------------------NAV---------------------->
        <header class="container-fluid text-center" style="background-color:darkslategray; padding:5px ">
            <h2 style="color:white; text-align:left">customer</h2>
            <div>
                <div>
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#"></a>
                </div>
                <div div class="container-fluid">

                    <div class="collapse navbar-collapse" id="myNavbar">
                        <ul class="nav navbar-nav" style="float:right">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#">About</a></li>
                            <li><a href="#">Projects</a></li>
                            <li><a href="#">Contact</a></li>

                            <li><a href="@Url.Action("Logout","Login")"><span class="glyphicon glyphicon-log-in"></span> Logout</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </header>
    </div>


    <!--nave-->
    <nav class="navbar navbar-default">
        <div>

            <div class="collapse navbar-collapse" id="myNavbar">


                <div class="container-fluid">
                    <div class="navbar-header">
                        <ul class="nav navbar-nav">
@if (Convert.ToInt32(Session["UserTypeId"]) == 2)
{

                            <li style="font-size:20px ;width:100px ; height:50px">@Html.ActionLink("requests", "listrequests", "customer")</li>

                            <li style="font-size:20px; width:100px;height:50px;">@Html.ActionLink("Personal Information", "listInformation", "customer")</li>
                          //  <li style="font-size:20px; width:100px;height:50px">@Html.ActionLink("Previous Projects", "previous", "customer")</li>
}
@if (Convert.ToInt32(Session["UserTypeId"]) == 5)
{

    <li style="font-size:20px ;width:100px ; height:50px">@Html.ActionLink("Show Requests", "requests", "Traniee")</li>

    <li style="font-size:20px; width:100px;height:50px;">@Html.ActionLink("Current Project", "current_view", "Traniee")</li>
    <li style="font-size:20px; width:100px;height:50px;">@Html.ActionLink("Previous Project", "previous", "Traniee")</li>

}
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </nav>
    <!---------------------------------->
    <article>
        <div>
            @RenderBody()
        </div>
    </article>
