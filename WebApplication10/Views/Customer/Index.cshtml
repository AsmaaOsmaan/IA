@model IEnumerable<WebApplication10.Models.projects>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/shared/_customerlayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.time_)
        </th>
       
        @*<th>
            @Html.DisplayNameFor(model => model.users.email)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.status.name_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.progress.name_)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.time_)
        </td>
       
        @*<td>
            @Html.DisplayFor(modelItem => item.users.email)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.status.name_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.progress.name_)
            @if (item.progress.name_ == "notstarted")
            {
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                @Html.ActionLink("Details", "Details", new { id = item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id })
            </td>



            }
            else
            {
                <th></th>
            }
        </td>
        
    </tr>
}

</table>
