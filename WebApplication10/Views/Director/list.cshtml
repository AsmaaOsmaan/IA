@model IEnumerable<WebApplication10.Models.users>

@{
    ViewBag.Title = "list";
    //Layout = "~/views/shared/_directorlayout.cshtml";
    Layout = "~/views/shared/_adminlayout.cshtml";
}

<h2>Personal Information</h2>

<table class="table" style="text-align:start;background-color:aliceblue">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.jobDescription)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserRole.titleRole)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.firstname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.lastname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.photo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.jobDescription)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserRole.titleRole)
        </td>
        <td>
            @Html.ActionLink("Projects displayed", "listprojects", null, new { @class = "btn btn-default" }) 
            @Html.ActionLink("check Requests", "check", null, new { @class = "btn btn-primary" })
                    
        </td>
    </tr>
}

</table>
