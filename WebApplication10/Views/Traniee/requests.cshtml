@model IEnumerable<WebApplication10.Models.hiringRequest>

@{
    ViewBag.Title = "requests";
    Layout = "~/Views/shared/_customerlayout.cshtml";
}

<h2>requests</h2>


<table class="table" style="text-align:start">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.projects.titel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status.name_)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.users.email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.projects.titel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.status.name_)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.users.email)
        </td>
        <td>
            @Html.ActionLink("Accept", "AccepteRequest", new { id = item.Id }, new { @class = "btn btn-success" })
            @Html.ActionLink("Reject", "RejectRequests", new { id = item.Id }, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
<h2 style="text-align:left">
    @Html.ActionLink("Create New", "Create")
</h2>